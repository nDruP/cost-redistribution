{% extends 'base.jinja2' %}

{% block subtitle %}Home{% endblock subtitle %}

{% block content %}
   <form method="POST">
      <label for="total_bill">Total Bill: </label>
      <input name="total_bill" type="number" step="0.01" min="0.01" />
      <br>

      <br>
      <table style="width:70%;">
       <tr>
	<th>Name</th>
	<th>Income></th>
	</tr>
	{% for _ in range(n_peeps) %}
	<tr>
	<td><input name="names" type="text" value="Chungus" /></td>
      	<td><input name="incomes" type="number" step="0.01" min="0.01" value="12" /></td>
	</tr>
	{% endfor %}
	</table>
	
      <br>
      <br>
      
      <input type="submit" id="IncomeSubmit" value="Submit">&emsp;
      <input name="addPeeps" type="submit" value="Add Person">  
      <input name="remPeeps" type="submit" value="Remove Person">
    </form>

{% if total != -1 %}
<table>
       <tr>
	<th>Name</th>
	<th>Income</th>
	<th>Even Split</th>
	<th>EvenSplit % of Income</th>
	<th>Adjusted Split</th>
	<th>AdjSplit % of Income</th>
	</tr>
{% for x in split_info %}
<tr>
   {% for i in range(6) %}
   <td>{{ x[i] }}</td>
   {% endfor %}
</tr>
{% endfor %}

</table>
{% endif %}

{% endblock content %}